{% extends 'base.html.twig' %}

{% block title %}LES ARTISTES{% endblock %}

{% block body %}
<div class="container">
{% for artist in artists %}
<div class="artcard">
  <h2>{{ artist.nickname }}</h2>
    <img src="{{ asset('/uploads/artiste/' ~ artist.picture) }}" alt="{{ artist.nickname }}">
    <p>Description: {{ artist.description }}</p>
    <p>Email: {{ artist.email }}</p>
    <p>Phone: {{ artist.phone }}</p>
    <p>Style: {{ artist.artistCategory.name }}</p>
    {% if is_granted('ROLE_ADMIN') %}
    <p>
      <a href={{ path('app_artist_controller_crud_show', {'id': artist.id}) }}>Details</a>
    <p>
    {% endif %}
    
</div>
{% endfor %}
<div>
{% endblock %}
